---
/**
 * Minimal full-viewport layout with animated gradient background.
 */
import AnimatedBackground from '../components/AnimatedBackground.astro';
import PlausibleAnalytics from '../components/PlausibleAnalytics.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const domain = 'shortcut.gr';
const canonicalURL = `https://www.${domain}`;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts: Roboto Serif (bold outlined text) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Serif:wght@700&display=swap"
      rel="stylesheet"
    />

    <!-- Analytics -->
    <PlausibleAnalytics domain={domain} />
  </head>
  <body class="h-screen overflow-hidden bg-slate-900 antialiased">
    <AnimatedBackground />

    <!-- Main Content -->
    <main class="relative z-10 flex h-screen items-center justify-center">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --font-serif: 'Roboto Serif', Georgia, serif;
  }

  html {
    scroll-behavior: smooth;
  }

  /* Disable transitions for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition: none !important;
      animation: none !important;
    }
  }
</style>
