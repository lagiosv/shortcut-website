---
/**
 * Shortcut.gr - Minimal landing page
 * Large outlined "Shortcut" text on animated gradient background
 */
import Base from '../layouts/Base.astro';

const title = 'Shortcut';
const description = 'Shortcut - Digital solutions and self-hosted services.';
---

<Base title={title} description={description}>
  <h1 class="shortcut-text select-none">
    Shortcut
  </h1>
</Base>

<style>
  .shortcut-text {
    font-family: var(--font-serif);
    font-size: clamp(4rem, 18vw, 14rem);
    font-weight: 400;
    letter-spacing: -0.02em;
    color: transparent;
    -webkit-text-stroke: 2px white;
    text-stroke: 2px white;
    line-height: 1;
    text-align: center;
    padding: 0 1rem;
  }

  /* Adjust stroke width for different screen sizes */
  @media (min-width: 768px) {
    .shortcut-text {
      -webkit-text-stroke: 3px white;
      text-stroke: 3px white;
    }
  }

  @media (min-width: 1280px) {
    .shortcut-text {
      -webkit-text-stroke: 4px white;
      text-stroke: 4px white;
    }
  }
</style>
