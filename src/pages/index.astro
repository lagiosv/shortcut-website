---
/**
 * Shortcut.gr - Minimal landing page
 * Large outlined "Shortcut" text repeated vertically on animated gradient background
 */
import Base from '../layouts/Base.astro';

const title = 'Shortcut';
const description = 'Shortcut - Digital solutions and self-hosted services.';

// Number of text repetitions to fill viewport
const repetitions = 4;
---

<Base title={title} description={description}>
  <div class="shortcut-container select-none" aria-label="Shortcut">
    {Array.from({ length: repetitions }).map((_, i) => (
      <span class="shortcut-text font-bold block" aria-hidden={i > 0}>
        Shortcut
      </span>
    ))}
  </div>
</Base>

<style>
  .shortcut-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100vh;
    padding-bottom: 0;
    /* Push down so bottom line is half outside */
    margin-bottom: calc((100vw - 80px) / 5 * -0.5);
  }

  .shortcut-text {
    font-family: var(--font-serif);
    font-size: calc((100vw - 80px) / 5);
    line-height: 0.42;
    letter-spacing: -0.025em;
    color: transparent;
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.6);
    white-space: nowrap;
  }
</style>
