---
/**
 * Shortcut.gr - Minimal landing page
 * Large outlined "Shortcut" text repeated vertically on animated gradient background
 */
import Base from '../layouts/Base.astro';

const title = 'Shortcut';
const description = 'Shortcut - Digital solutions and self-hosted services.';

// Number of text repetitions to fill viewport
const repetitions = 5;
---

<Base title={title} description={description}>
  <div class="shortcut-container select-none" aria-label="Shortcut">
    {Array.from({ length: repetitions }).map((_, i) => (
      <span class="shortcut-text font-bold leading-none tracking-tight text-center block" aria-hidden={i > 0}>
        Shortcut
      </span>
    ))}
  </div>
</Base>

<style>
  .shortcut-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    overflow: hidden;
  }

  .shortcut-text {
    font-family: var(--font-serif);
    font-size: 20vw;
    color: transparent;
    -webkit-text-stroke: 2px white;
    white-space: nowrap;
  }

  /* Responsive stroke width */
  @media (min-width: 768px) {
    .shortcut-text {
      -webkit-text-stroke-width: 2px;
    }
  }

  @media (min-width: 1280px) {
    .shortcut-text {
      -webkit-text-stroke-width: 3px;
    }
  }
</style>
