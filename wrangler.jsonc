{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "shortcut-website",
  "compatibility_date": "2024-12-01",
  "compatibility_flags": ["nodejs_compat"],

  // Workers configuration (NOT Pages)
  "main": "dist/_worker.js/index.js",
  "assets": {
    "binding": "ASSETS",
    "directory": "./dist"
  },

  "observability": {
    "enabled": true
  }
}
